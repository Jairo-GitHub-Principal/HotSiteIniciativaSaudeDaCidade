<div class="row text-center">
    <div class="col-sm-12 col-md-5 col-lg-5 borda">
        <h2>Entre em contato!:</h2>
        <p>Nos mande uma mensagem e fique por dentro de nossos eventos</p>

        <form asp-action="Cadastrar" method="POST">

            <div class="form-group row">
                <label asp-for="Nome" class="col-3">Nome:</label>
                <input asp-for="Nome" type="text" class="form-control  col-8" />
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-3">Email:</label>
                <input asp-for="Email" type="email" class="form-control col-8" />
            </div>
            <div class="form-group row">
                <label asp-for="Mensagem" class="col-3">Mensagem (opcional):</label>
                <textarea asp-for="Mensagem" class="form-control  col-8" rows="3"></textarea>
            </div>
            <div class="form-group row">
                <div class="col-8"> @ViewBag.msg</div>
                <input type="submit" value="Enviar" class="col-3" />
                <div class="col-1"></div>

            </div>

        </form>
    </div>
